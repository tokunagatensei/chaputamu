<%= render "shared/second-header"%>

<%= form_with model: @user, url: user_registration_path, class: 'registration-main', local: true do |f| %>
<div class='form-wrap'>
  <div class='form-header'>
    <h1 class='form-header-text'>
      Create Account
    </h1>
  </div>

  <%# render 'shared/error_messages', model: f.object %>

  <%# nickname %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">ニックネーム</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.text_area :nickname, class:"input-default", id:"nickname", placeholder:"例) k-pop太郎", maxlength:"40" %>
  </div>
  <%# nickname %>

  <%# email %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">メールアドレス</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.email_field :email, class:"input-default", id:"email", placeholder:"PC・携帯どちらでも可", autofocus: true %>
  </div>
  <%# email %>

  <%# password %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password, class:"input-default", id:"password", placeholder:"6文字以上の半角英数字" %>
    <p class='info-text'>※英字と数字の両方を含めて設定してください</p>
  </div>
  <%# password %>

  <%# password_confirmation %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">パスワード(確認)</label>
      <span class="indispensable">必須</span>
    </div>
    <%= f.password_field :password_confirmation, class:"input-default", id:"password-confirmation", placeholder:"同じパスワードを入力して下さい" %>
  </div>
  <%# password_confirmation %>

  <%# name %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">お名前(全角)</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-name-wrap'>
      <%= f.text_area :last_name, class:"input-name", id:"last-name", placeholder:"例) 山田" %>
      <%= f.text_area :first_name, class:"input-name", id:"first-name", placeholder:"例) 陸太郎" %>
    </div>
  </div>
  <%# name %>

  <%# birth_date %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">生年月日</label>
      <span class="indispensable">必須</span>
    </div>
    <div class='input-birth-wrap'>
      <%= raw sprintf(
                  f.date_select(
                    :birth_date,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    </div>
  </div>
  <%# birth_date %>

  <%# favorite_group %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">好きなグループ</label>
    </div>
    <%= f.text_area :favorite_group, class:"input-default", id:"favorite_group", placeholder:"例) Blackpink", maxlength:"40" %>
  </div>
  <%# favorite_group %>

  <%# favorite_member %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">好きなメンバー</label>
    </div>
    <%= f.text_area :favorite_member, class:"input-default", id:"favorite_member", placeholder:"例) ジェニ", maxlength:"40" %>
  </div>
  <%# favorite_member %>

  <%# self_introduction %>
  <div class="form-group">
    <div class='form-text-wrap'>
      <label class="form-text">簡単な自己紹介</label>
    </div>
    <%= f.text_area :self_introduction, class:"input-self_introduction", id:"self_introduction", placeholder:"例) よろしくお願いします！", maxlength:"400" %>
  </div>
  <%# self_introduction %>

  <div class='register-btn'>
    <%= f.submit "Create Account" ,class:"register-red-btn" %>
  </div>
</div>
<% end %>